<div class="row">

  <div class="col-md-6">
    <img src="<%= download_path(document.id, datastream_id: 'Basic.jpg') %>" style="width: 100%">
  </div>

  <div class="col-md-6">
    <%= render 'show_default', document: document %>

    <% course_collections = CourseCollection.where(member_ids_ssim: document.id) %>
    <%= render 'show_collections', title: 'Course Collections', collections: course_collections %>

    <% if current_user.admin? %>
      <% collections = PersonalCollection.where(member_ids_ssim: document.id) %>
      <%= render 'show_collections', title: 'Personal Collections', collections: collections, item_partial: 'admin_collection_item' %>
    <% else %>
      <% my_collections = current_user.personal_collections.where(member_ids_ssim: document.id) %>
      <%= render 'show_collections', title: 'My Collections', collections: my_collections %>
    <% end %>
  </div>

</div>
