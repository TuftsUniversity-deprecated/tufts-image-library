<div id="content" class="show-document">
  <div id="previousNextDocument">
    <%= link_back_to_catalog %></li>
  </div>
  <ul class="pull-right show-tools">
    <% if can? :edit, @curated_collection %>
      <li>
        <%= link_to [:edit, @curated_collection] do %>
          edit title &amp; description <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
      </li>
    <% end %>
    <% if can? :destroy, @curated_collection %>
      <li>
        <%= link_to @curated_collection, method: :delete do %>
          delete collection <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </li>
    <% end %>
  </ul>
  <h1><%=@curated_collection.title %> <small><%=@curated_collection.type.capitalize %> Collection</small></h1>
  <p class="lead"><%= @curated_collection.description.first %></p>

  <% if @curated_collection.members.size == 0 %>
    <h2>This collection does not have any members</h2>
  <% else %>
    <h2>Members:</h2>
    <%= bootstrap_form_for @curated_collection do |f| %>
      <div id="orderable" class="dd row gallery">
        <ol class="dd-list">
          <%= render partial: 'member',  collection: @curated_collection.members, locals: { f: f } %>
        </ol>
      </div>
      <%= f.primary t('.save_order') %>
    <% end %>
  <% end %>
</div>
