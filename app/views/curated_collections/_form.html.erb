<%= bootstrap_form_for @curated_collection, html: {class: 'editor'} do |f| %>
  <%= f.text_field :title %>
  <%= render "records/edit_field", {f: f, render_req: true, key: :description } %>

  <% unless @curated_collection.new_record? %>
    <%= f.text_field :create_date, readonly: true, disabled: true %>
    <%= f.text_field :creator, readonly: true, disabled: true %>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
